{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row text-center">
        <a href="{{ path('task_create') }}" class="btn btn-primary">Créer une tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-success">Liste des tâches</a>
        <a href="{{ path('task_list_todo') }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_list_done') }}" class="btn btn-warning">Consulter la liste des tâches terminées</a>
        <br /><br /><br />

    </div>
    {% if tasks|length == 0 %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore de tâche enregistrée. <a href="{{ path('user_create') }}" class="btn btn-warning pull-right">Créer un utilisateur</a>
            {{ dump(user.roles) }}
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Edit</th>
                    <th>Changer statut</th>
                    <th>Suppression</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ task.createdAt|date('d-m-Y') }}</td>
                        <td>
                            {% if task.user == null %}
                                <p>Auteur: Anonyme</p>
                            {% else %}
                                <p>{{ task.user.username }}</p>
                            {% endif %}</td>
                        <td>{{ task.title }}</td>
                        <td>{{ task.content }}</td>
                        <td>
                            <a href="{{ path('task_edit', {'id' : task.id}) }}" class="btn btn-info btn-sm">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('task_toggle', {'id' : task.id}) }}" class="btn btn-success btn-sm">{% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}</a>
                        </td>
                        <td>
                            <a href="{{ path('task_delete', {'id' : task.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                        <td>
                            {% if task.isDone %}<span class="glyphicon glyphicon-ok" style="color: green;font-size:1.5em;"></span>{% else %}<span class="glyphicon glyphicon-remove" style="color: red;font-size:1.5em;"></span>{% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
